prefix : <http://example.org/>
prefix xsd: <http://www.w3.org/2001/XMLSchema#>
base <http://example.org/>

# The directory "posts" contains 6 JSON files:
# 		your_pinned_posts.json  
# 		your_posts_1.json  
# 		your_videos.json
# and the directory
# 		album
# containing numbered JSON files

:UserData{
	:pinned_posts_v2 @:PinnedPosts ;
	:your_posts  @:YourPost * ;
	:videos_v2 @:YourVideo * ;
	:albums @:Album * ;
}

:PinnedPosts{
	:name xsd:string ;
	:description xsd:string ;
	:entries @:Entry * ;
}
:Entry{
	:timestamp xsd:int ;
	:data @:NamedURI ;
}
:NamedURI{
	:name xsd:string ;
	:uri xsd:string ;
}


:YourPost{
	:timestamp xsd:int ;
	:attachments @:Attachment * ;
	:data @:YourPostData *;
	:title xsd:string ;
}
:Attachment{
	:data @:AttachmentData *;
}
:AttachmentData{
	:media @:Media ;
	:title xsd:string ;
	:description xsd:string ;
	:place @:Place ? ;
	:external_context @:ExternalContext ? ;
}
:Media{
	:uri xsd:string ;
	:creation_timestamp xsd:int ; #UNIX timestamp
	:media_metadata @:MediaMetadata ;
	:thumbnail @:ThumbNail ? ;
	:description xsd:string ? ;
	:title xsd:string ? ;
}
:MediaMetadata{
	:photo_metadata @:PhotoMetadata ? ;
	:video_metadata @:VideoMetadata ? ;
}
:PhotoMetadata{
	:exif_data @:ExifData * ;
}
:VideoMetadata{
	:exif_data @:ExifData * ;
}
:ExifData{
	:upload_ip xsd:string ;
	:taken_timestamp xsd:int  ; #UNIX timestamp
}
:YourPostData{
	:post xsd:string ;
}
:ThumbNail{
	:uri xsd:string ;
}
:Place{
	:name xsd:string ;
	:coordinate @:Coordinate ?;
	:address xsd:string ;
	:url xsd:string ;
}
:Coordinate{
	:latitude xsd:float ;
	:longitude xsd:float ;
}
:ExternalContext{
	:url xsd:string ;
}

:YourVideo{
	:uri xsd:string ;
	:creation_timestamp xsd:int ;
	:media_metadata @:MediaMetadata ;
	:thumbnail @:ThumbNail ;
	:description xsd:string ;
}

:Album{
	# Content of the numbered files
	:name xsd:string ;
	:photos @:Media * ;
	:cover_photo @:Media ;
	:last_modified_timestamp xsd:int  ; #UNIX timestamp
	:description xsd:string ;
}
